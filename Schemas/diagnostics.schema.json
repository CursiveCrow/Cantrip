{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Cantrip Diagnostics",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "diagnostics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "code",
          "severity",
          "message",
          "file",
          "range"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "severity": {
            "enum": [
              "error",
              "warning",
              "note",
              "help"
            ]
          },
          "message": {
            "type": "string"
          },
          "file": {
            "type": "string"
          },
          "range": {
            "type": "object",
            "properties": {
              "start": {
                "type": "object",
                "properties": {
                  "line": {
                    "type": "integer"
                  },
                  "column": {
                    "type": "integer"
                  }
                },
                "required": [
                  "line",
                  "column"
                ]
              },
              "end": {
                "type": "object",
                "properties": {
                  "line": {
                    "type": "integer"
                  },
                  "column": {
                    "type": "integer"
                  }
                },
                "required": [
                  "line",
                  "column"
                ]
              }
            },
            "required": [
              "start",
              "end"
            ]
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "fixits": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "edits": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "file": {
                        "type": "string"
                      },
                      "insert": {
                        "type": "string"
                      },
                      "deleteRange": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
          "typedHole": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "required": [
              "type"
            ]
          }
        }
      }
    }
  },
  "required": [
    "version",
    "diagnostics"
  ]
}
